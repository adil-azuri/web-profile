<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Register</title>
</head>

<body>
    <div class=" min-h-screen flex flex-col bg-white dark:bg-gray-900">
        <!-- navbar -->

        {{>navbar}}

        <div class="bg-white dark:bg-gray-900">
            {{!-- form input --}}
            <div class="flex justify-center">


                <form action="/register" method="POST"
                    class="mt-10 p-6 rounded-lg shadow-xl w-full max-w-2xl space-y-6 bg-gray-900">
                    <h2 class="text-3xl font-bold text-white text-center mb-6">Register</h2>
                    {{#if message}}
                    <p class="text-red-500">{{message}}</p>
                    {{/if}}
                    {{!-- INPUT NAME --}}
                    <div>
                        <label for="name" class="block text-gray-300 font-medium mb-2">Nama</label>
                        <input type="text" name="name" id="name"
                            class="w-full px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white bg-gray-800 placeholder-gray-500"
                            placeholder="Masukkan nama Anda" />
                    </div>

                    {{!-- Input EMAIL --}}
                    <div>
                        <label for="email" class="block text-gray-300 font-medium mb-2">Email</label>
                        <input type="email" name="email" id="email"
                            class="w-full px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white bg-gray-800 placeholder-gray-500"
                            placeholder="Masukkan email Anda" />
                    </div>

                    {{!-- INPUT Password --}}
                    <div>
                        <label for="password" class="block text-gray-300 font-medium mb-2">Password</label>
                        <input type="password" name="password" id="password"
                            class="w-full px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white bg-gray-800 placeholder-gray-500"
                            placeholder="Masukkan password Anda" />
                    </div>

                    <div class="flex justify-center">
                        <button type="submit"
                            class="bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 transition min-w-40">
                            Register
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>

</body>

</html>