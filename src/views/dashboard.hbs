<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="../Assets/style/style.css">

    <title>Dashboard</title>
</head>

<body>
    <div class=" min-h-screen flex flex-col bg-white dark:bg-gray-900">
        {{>navbar}}

        <div class="mx-15">
            {{#if userData}}

            <h1 class="text-4xl font-bold text-white mb-5">Welcome, {{userData.email}}</h1>
            <div class="flex">
                <a href="/logout" class="flex text-xl text-white font-md bg-red-600 px-4 py-2 rounded-md">Logout</a>
            </div>
            {{else}}
            <h1 class="text-4xl font-bold text-white mb-5">Hai There, Want to look your projects</h1>
            <div class="flex">
                <a href="/login" class="flex text-xl text-white font-md bg-blue-600 px-4 py-2 rounded-md">Login</a>
            </div>

            {{/if}}
        </div>

        <main class="bg-white dark:bg-gray-900">
            <!-- introduction -->
            <div class="mx-15">

            </div>
            <section>
                <div class="grid grid-flow-col grid-rows-1 items-center mt-10">
                    <!-- Grid 1-->
                    <div class="flex justify-center">
                        <div class="">
                            <a href="/techs" class="
                            text-xl text-gray-300 font-bold flex justify-center flex-col text-center">

                                Go to Techs Form

                                <img src="../Assets/img/componen.svg"
                                    class=" size-50 bg-gray-700 rounded-xl shadow-md shadow-blue-400 transform transition duration-500 hover:scale-105 hover:shadow-blue-300 hover:shadow-sm mt-10">
                                </img>
                            </a>
                        </div>

                    </div>

                    <!-- grid 2 -->
                    <div class="flex justify-center">
                        <div class="">
                            <a href="/experience" class="
                            text-xl text-gray-300 font-bold flex justify-center flex-col text-center">

                                Go to Experience Form

                                <img src="../Assets/img/brain.svg"
                                    class=" size-50 bg-gray-500 rounded-xl shadow-md shadow-blue-400 transform transition duration-500 hover:scale-105 hover:shadow-blue-300 hover:shadow-sm mt-10">
                                </img>
                            </a>
                        </div>

                    </div>

                    <!-- grid 3 -->
                    <div class="flex justify-center">
                        <div class="">
                            <a href="/myprojects" class="
                            text-xl text-gray-300 font-bold flex justify-center flex-col text-center">

                                Go to My Projects Form

                                <img src="../Assets/img/laptop.svg"
                                    class=" size-50 bg-gray-600 rounded-xl shadow-md shadow-blue-400 transform transition duration-500 hover:scale-105 hover:shadow-blue-300 hover:shadow-sm mt-10">
                                </img>
                            </a>
                        </div>

                    </div>
            </section>


    </div>

    <script src="../Assets/js/index.js"></script>
</body>

</html>