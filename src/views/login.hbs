<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Login</title>
</head>

<body>
    <div class=" min-h-screen flex flex-col bg-white dark:bg-gray-900">
        <!-- navbar -->

        {{>navbar}}

        <div class="bg-white dark:bg-gray-900">
            {{!-- form input --}}
            <div class="flex justify-center">
                <form action="/login" method="POST"
                    class="mt-10 p-6 rounded-lg shadow-xl w-full max-w-2xl space-y-6 dark:bg-gray-800">
                    <h2 class="text-2xl font-semibold text-white mb-4">LOGIN</h2>
                    {{#if message}}
                    <p class="text-red-500">{{message}}</p>
                    {{/if}}
                    {{!-- Input EMAIL --}}
                    <div>
                        <label for="email" class="block text-white font-medium mb-2">Email</label>
                        <input type="email" name="email"
                            class="w-full px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white" />
                    </div>
                    {{!-- INPUT Password --}}
                    <div>
                        <label for="password" class="block text-white font-medium mb-2">Password</label>
                        <input type="password" name="password"
                            class="w-full px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white" />
                    </div>

                    <button type="submit"
                        class="w-sm bg-blue-700 text-white font-semibold py-2 rounded-md hover:bg-blue-700 transition min-w-full">
                        Submit
                    </button>
                </form>
            </div>
        </div>

    </div>

</body>

</html>