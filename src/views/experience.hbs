<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Experience</title>
</head>

<body>
    <div class=" min-h-screen flex flex-col bg-white dark:bg-gray-900">
        <!-- navbar -->

        {{>navbar}}

        <div class="bg-white dark:bg-gray-900">
            {{!-- form input --}}
            <div class="flex justify-center">
                <form action="/experience" method="POST" enctype="multipart/form-data"
                    class="mt-10 p-6 rounded-lg shadow-xl w-full max-w-4xl space-y-6 dark:bg-gray-800">
                    <h2 class="text-2xl font-semibold text-gray-300 mb-4">Experience Form</h2>

                    {{!-- title input --}}
                    <label for="title" class="block text-gray-400 font-medium mb-2">Nama Posisi</label>
                    <input type="text" name="title"
                        class="w-full px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                    {{!-- company input --}}
                    <label for="title" class="block text-gray-400 font-medium mb-2">Company</label>
                    <input type="text" name="company"
                        class="w-full px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                    {{!-- INPUT DATE --}}
                    <div class="flex justify-center gap-20 text-lg text-gray-400 max-w-4xl">
                        <div class="flex flex-col py-2 rounded-md  w-full">
                            <label for="startDate">Start Date : </label>
                            <input type="date" name="startDate" class="bg-gray-700 rounded-md text-white px-3 py-2"
                                id="startDate">
                        </div>
                        <div class="flex flex-col py-2 rounded-md w-full">
                            <label for="endDate">End Date : </label>
                            <input type="date" name="endDate" class="bg-gray-700 rounded-md text-white px-3 py-2"
                                id="startDate">
                        </div>

                    </div>

                    {{!-- jobdesk input --}}
                    <div>
                        <label for="title" class="block text-gray-400 font-medium mb-2">Jobdesk</label>
                        <input type="text" name="jobdesk"
                            class="w-full mb-2 px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                        <input type="text" name="jobdesk"
                            class="w-full mb-2 px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                        <input type="text" name="jobdesk"
                            class="w-full mb-2 px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />
                        <input type="text" name="jobdesk"
                            class="w-full mb-2 px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />
                    </div>

                    <div class="">
                        <label for="title" class="text-gray-400 font-medium">Techs Used</label>
                        <div class="flex gap-3 justify-center mt-5">
                            <input type="text" name="tech"
                                class="mb-2 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                            <input type="text" name="tech"
                                class=" mb-2 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                            <input type="text" name="tech"
                                class=" mb-2 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                            <input type="text" name="tech"
                                class=" mb-2 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />
                        </div>
                    </div>

                    {{!-- Image EXP --}}
                    <div>
                        <label for="file" class="block text-gray-400 font-medium mb-2">Image Experience</label>
                        <input type="file" name="expPicture"
                            class="w-full text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-100 file:text-blue-700 hover:file:bg-blue-200 focus:outline-none" />
                    </div>

                    <div class="flex justify-center">
                        <button type="submit"
                            class=" bg-blue-600 text-white font-semibold py-2 px-10 rounded-md hover:bg-blue-700 transition">
                            Submit
                        </button>
                    </div>
                </form>


            </div>

            <!-- Experience -->
            <section class="justify-center bg-white dark:bg-gray-900 my-20 w-full max-w-7xl">
                <h2 class="mx-15 text-3xl font-bold mb-10 text-white">Work Experience</h2>

                {{#each experiences}}
                <div class="flex justify-center mb-7">
                    <div class="flex bg-white dark:bg-gray-800 w-[90%] rounded-xl justify-between p-5">
                        <div class="flex">
                            <img src="Assets/uploads/{{imgsrc}}" alt="Full-Stack" class="size-20 rounded-lg mr-10" />
                            <div class="ml-8x">
                                <div class="flex flex-col items-start text-white mb-5">
                                    <div class="justify-start">
                                        {{!-- render db name --}}
                                        <h3 class="font-bold text-2xl">{{namePosition}}</h3>
                                        {{!-- render db company --}}
                                        <p class="text-green-600 dark:text-green-400 text-xl">{{company}}</p>
                                    </div>

                                </div>
                                <ul
                                    class=" text-gray-600 dark:text-gray-400 text-md space-y-1 list-disc list-inside mb-5">
                                    {{#each jobdesk}}
                                    <li>{{this}}</li>
                                    {{/each}}

                                </ul>
                                <div class="flex gap-3 text-sm font-medium">
                                    {{#each tech}}
                                    <p
                                        class="px-3 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-gray-600 dark:text-gray-400">
                                        {{this}}</p>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="flex flex-col items-center">
                            <div>
                                <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{duration}}</p>
                            </div>
                            <div class="mt-10">
                                <div class="mb-7">
                                    <a href="/update_exp/{{id}}"
                                        class="px-6 py-1 rounded-full bg-blue-700 hover:bg-blue-800 text-gray-300">Edit</a>
                                </div>
                                <form action="/deleteExp" method="post">
                                    <input type="hidden" name="id" value='{{id}}' />
                                    <button type="submit"
                                        class="bg-red-800 px-4 py-1 rounded-full hover:bg-red-700 text-gray-300">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </section>
        </div>

    </div>

</body>

</html>