<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>My Projects</title>
</head>

<body>
    <div class=" min-h-screen flex flex-col bg-white dark:bg-gray-900">
        <!-- navbar -->

        {{>navbar}}

        <div class="bg-white dark:bg-gray-900">
            {{!-- ============================form input=========================== --}}
            <div class="flex justify-center">
                <form action="/myprojects" method="POST" enctype="multipart/form-data"
                    class="mt-10 p-5 rounded-lg shadow-xl w-full max-w-4xl space-y-6 dark:bg-gray-800">
                    <h2 class="text-2xl font-semibold text-gray-300 mb-4">My Project Form</h2>

                    {{!-- title input --}}
                    <label for="title" class="block text-gray-400 font-medium mb-2">Nama Project</label>
                    <input type="text" name="title"
                        class="w-full bg-gray-700 px-4 py-2 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                    {{!-- Description Input--}}
                    <label for="description" class="block text-gray-400 font-medium mb-2">Description</label>
                    <textarea name="description"
                        class="min-w-full bg-gray-700 p-2 h-30 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-white">
                    </textarea>

                    {{!-- Tech Input --}}
                    <label for="tech" class="text-gray-400 font-medium">Techs Used</label>
                    <div class="flex gap-3 mt-5">
                        <input type="text" name="tech"
                            class="mb-2 py-2 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                        <input type="text" name="tech"
                            class=" mb-2 py-2 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                        <input type="text" name="tech"
                            class=" mb-2 py-2 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />

                        <input type="text" name="tech"
                            class=" mb-2 py-2 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition text-white" />
                    </div>

                    {{!-- Image project --}}
                    <div>
                        <label for="file" class="block text-gray-400 font-medium mb-2">Image Experience</label>
                        <input type="file" name="projectPicture"
                            class="w-md bg-gray-700 rounded-md text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-100 file:text-blue-700 hover:file:bg-blue-200 focus:outline-none" />
                    </div>

                    <div class="flex justify-center">
                        <button type="submit"
                            class=" bg-blue-600 text-white font-semibold py-2 px-10 rounded-md hover:bg-blue-700 transition">
                            Submit
                        </button>
                    </div>
                </form>


            </div>


            <!-- =============================My Projects============================ -->
            <section class="bg-white dark:bg-gray-900 mt-15">
                <h2 class="ml-15 text-3xl font-bold mb-10 text-white">My Project</h2>

                <div class="flex justify-center mx-15">
                    <div class="grid grid-cols-2 gap-10">

                        <!-- PROJECTs -->
                        {{#each projects.rows}}
                        <div class="flex  bg-white dark:bg-gray-800 rounded-2xl mb-5">
                            <div class="">
                                <div class="flex justify-center flex bg-gray-700 rounded-t-2xl">
                                    <img src="Assets/uploads/{{this.projectsrc}}" alt="{{this.projectTitle}}"
                                        class="h-50" />

                                </div>
                                <div class="m-8 flex flex-col">
                                    <div class="">
                                        <h3 class="font-bold text-xl text-white mb-2">{{this.projectTitle}}</h3>
                                        <p class="text-lg text-gray-400 space-y-10">
                                            {{this.description}}
                                    </div>
                                    <div class="flex gap-3 text-sm font-medium text-gray-600 dark:text-gray-400 my-5">
                                        {{#each techs}}
                                        <p class="bg-gray-100 dark:bg-gray-700 rounded-full px-2 py-1">
                                            {{this}}</p>
                                        {{/each}}
                                    </div>
                                    <div class="flex justify-end text-gray-300">
                                        <a href="/update_projects/{{id}}"
                                            class="px-6 py-1 mr-5 rounded-full bg-blue-700 hover:bg-blue-800 text-gray-300">Edit</a>
                                        <form action="/deleteproject" method="post">
                                            <input type="hidden" name="id" value={{this.id}}
                                                class=" px-4 py-2 border border-gray-600 text-white" />
                                            <button type="submit"
                                                class=" bg-red-800 px-4 py-1 rounded-full hover:bg-red-700">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            {{/each}}

                        </div>
                    </div>

            </section>
        </div>

    </div>

</body>

</html>